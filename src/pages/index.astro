---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const last_posts = posts.slice(0, 3);
---

<BaseLayout>

    <div class="pb-12 mt-5">
      <div class="text-xl py-1">你好 👋</div>
      <div class="text-5xl font-bold">[zeze:阿鵝]</div>
      <div class="text-3xl py-3 font-bold">寫寫生活心得、技術研究、商業邏輯探討</div>
      <div class="py-2">
        <text class="text-lg">
          活了一輩子了，該找點有趣的事情來做做。  
        </text
        >
      </div>
      <div class="mt-8">
        <a class="btn" href="https://twitter.com/zzzz4z4z" target="_blank">我的Twitter</a>
        <a href="https://twitter.com/zzzz4z4z" target="_blank" class="btn btn-outline ml-5">還是Twitter</a>
      </div>
    </div>

    <div>
      <div class="text-3xl w-full font-bold mb-2">進行中的專案</div>
    </div>

    <HorizontalCard
      title="幻想中的專案"
      img="/post_img.webp"
      desc="還沒開始"
      url="#"
      badge="最新"
    />
    <div class="divider my-0"></div>


    <div>
      <div class="text-3xl w-full font-bold mb-5 mt-10">最新文章</div>
    </div>

    {
      last_posts.map((post) => (
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
        />
        <div class="divider my-0"></div>
      ))
    }

</BaseLayout>
